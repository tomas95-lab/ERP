                data-kt-scroll-offset="5px"
                data-kt-scroll-save-state="true"
                style="height: 222px;"
            >
                <!--begin::Menu-->
                <div class="menu menu-column menu-rounded menu-sub-indention pt-6 fw-semibold fs-6" id="#kt_app_sidebar_menu" data-kt-menu="true" data-kt-menu-expand="false">
                    <!-- Home -->
                    <a href="{{ path('dashboard') }}" class="menu-item text-dark">
                        <div class="menu-link text-dark text-hover-primary">
                            <span class="menu-icon">
                                <i class="fas fa-home"></i>
                            </span>
                            <span class="menu-title">Home</span>
                        </div>
                    </a>
                    <!-- Production -->
                    <div class="menu-item my-2">
                        <a href="#" class="menu-link text-dark text-hover-primary">
                            <span class="menu-icon">
