                            <span class="menu-title">Production Overview</span>
                        </a>
                    </div>
                    <!-- Field Operations -->
                    <div class="menu-item my-2">
                        <a href="#" class="menu-link text-dark text-hover-primary">
                            <span class="menu-icon">
                                <i class="fas fa-oil-can"></i>
                            </span>
                            <span class="menu-title">Field Ops</span>
                        </a>
                    </div>
                    <!-- Inventory -->
                    <div class="menu-item my-2">
                        <a href="#" class="menu-link text-dark text-hover-primary">
                            <span class="menu-icon">
                                <i class="fas fa-warehouse"></i>
                            </span>
                            <span class="menu-title">Inventory</span>
                        </a>
                    </div>
                    <!-- Financials -->
                    <div class="menu-item my-2">
                        <a href="#" class="menu-link text-dark text-hover-primary">
                            <span class="menu-icon">
                                <i class="fas fa-chart-line"></i>
                            </span>
                            <span class="menu-title">Financials</span>
                        </a>
                    </div>
                    <!-- Reports -->
                    <div class="menu-item my-2">
                        <a href="#" class="menu-link text-dark text-hover-primary">
                            <span class="menu-icon">
                                <i class="fas fa-file-alt"></i>
                            </span>
                            <span class="menu-title">Reports</span>
                        </a>
                    </div>
                    <!-- Team -->
                    <div class="menu-item my-2">
                        <a href="#" class="menu-link text-dark text-hover-primary">
                            <span class="menu-icon">
                                <i class="fas fa-users"></i>
                            </span>
                            <span class="menu-title">Team</span>
                        </a>
                    </div>
                    <!-- Account Settings -->
                    <div class="menu-item my-2">
                        <a href="{{ path('app_account_setting') }}" class="menu-link text-hover-primary text-dark">
                            <span class="menu-icon">
                                <i class="fas fa-gear"></i>
                            </span>
                            <span class="menu-title">Account Settings</span>
                        </a>
                    </div>
                </div>
                <!--end::Menu-->
            </div>
            <!--end::Scroll wrapper-->
        </div>
        <!--end::Menu wrapper-->
    </div>
